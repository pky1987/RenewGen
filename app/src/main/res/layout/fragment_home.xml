<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/drawer"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/action_menu"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="2dp"
            android:src="@drawable/d_menu"
            app:itemIconTint="@color/colorWhite"/>

        <TextView
            android:id="@+id/action_ps"
            android:layout_width="180dp"
            android:layout_height="52dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_toStartOf="@+id/action_menu"
            android:text="RenewGen"
            android:textColor="@color/colorWhite"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/action_bar_scanner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:src="@drawable/qr_code"/>

        <ImageView
            android:id="@+id/action_bar_icon"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/notification"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Home Page"
                    android:textColor="@color/colorText"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/movingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="none"
                    android:focusable="true"
                    android:background="@drawable/drawer"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:text="+RENEWGEN   +PREMIUM FINDS    +RENEWABLE ENERGY     +100% GENUINE BRANDS     +ENERGY INNOVATION     +LATEST LAUNCHES"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_horizontal_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:layout_marginBottom="-4dp" />

            <LinearLayout
                android:id="@+id/pointer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view_horizontal_1"
                android:layout_marginTop="-4dp"
                android:gravity="center"
                android:orientation="horizontal"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Solar Energy Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/solarEnergyCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/re"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text="Renewable Energy India News"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/solarLearnMoreChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:text=" Country News"
                                app:chipBackgroundColor="@color/white"
                                app:chipIcon="@drawable/ic_arrow_forward"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Wind Energy Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/windEnergyCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/windenergy"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text="Renewable Energy International News"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/windLearnMoreChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:text="International News"
                                app:chipBackgroundColor="@color/white"
                                app:chipIcon="@drawable/ic_arrow_forward"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Hydro Energy Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hydroEnergyCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ore"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text="Investment Opportunity(India)"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/hydroLearnMoreChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:text="Opportunity"
                                app:chipBackgroundColor="@color/white"
                                app:chipIcon="@drawable/ic_arrow_forward"/>

                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <!-- Geothermal Energy Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/geothermalEnergyCard"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ora"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:text=" Investment Opportunity(International)"
                                android:textColor="@color/white"
                                android:textSize="24sp"
                                android:textStyle="bold"/>

                            <com.google.android.material.chip.Chip
                                android:id="@+id/geothermalLearnMoreChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="16dp"
                                android:text="Invest"
                                app:chipBackgroundColor="@color/white"
                                app:chipIcon="@drawable/ic_arrow_forward"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_horizontal_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/colorWhite"
            app:headerLayout="@layout/drawer_img"
            app:itemBackground="@drawable/drawer"
            app:itemIconTint="@color/colorWhite"
            app:itemTextColor="@color/colorWhite"
            app:menu="@menu/drawer_menu"/>
    </androidx.drawerlayout.widget.DrawerLayout>
</RelativeLayout>