<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3B82F6" />
            <corners android:radius="16dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#34D399" />
            <corners android:radius="16dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>
